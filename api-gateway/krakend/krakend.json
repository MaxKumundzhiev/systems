{
    "version": 3,
    "name": "api-gateway",
    "port": 8000,
    "cahce_ttl": "300s",
    "endpoints": [
        {
            "endpoint": "/discovery/health/",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/health",
                    "host": [
                        "http://delivery:8001"
                    ]
                }
            ]
        },
        {
            "endpoint": "/users/health/",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/health",
                    "host": [
                        "http://users:8002"
                    ]
                }
            ]
        },
        {
            "endpoint": "/users/{user_id}/deliveries/",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/users/{user_id}/delivery",
                    "host": [
                        "http://delivery:8001"
                    ]
                },
                {
                    "url_pattern": "/users/{user_id}",
                    "host": [
                        "http://users:8002"
                    ]
                }
            ]
        }
    ]
}